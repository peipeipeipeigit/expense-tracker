<div class="container">

  <div class="row my-4">
    <div class="col"></div>
    <div class="col-6 g-0">
      <select class="form-select" aria-label="Default select example">
        <option selected>類別</option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
      </select>
      <div class="d-flex justify-content-between mt-4">
        <span>總金額：</span>
        <span class="text-warning fw-bold fs-1">25000</span>
      </div>
    </div>
    <div class="col"></div>
  </div>

  <div class="row">
    <div class="col-3"></div>
    <div class="col g-0">
      <table class="table table-striped my-auto">
        {{#each records }}
        <tr>
          <td class="col-1">
            <span class="fa-solid fa-utensils col-12 fs-1 text-center py-3"></span>
          </td>
          <td class="col-2">
            <p class="fs-5 text-start my-auto">{{this.name}}</p>
            <p class="fs-6 text-start my-auto">{{this.date.YYYY}}</p>
          </td>
          <td class="col-1">
            <p class="col-12 fs-5 text-center px-2 py-3 mb-0">{{this.amount}}</p>
          </td>
        </tr>
        {{/each}}
      </table>
    </div>
    <div class="col-3 d-flex justify-content-around">
      <button type="button" class="btn" href="">修改</button>
      <button type="button" class="btn">刪除</button>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col"></div>
    <div class="col-6 d-flex justify-content-around">
      <a href="/records/new">
        <button type="button" class="btn btn-warning">新增支出</button>
      </a>
    </div>
    <div class="col"></div>
  </div>

</div>