<div class="container d-flex justify-content-around">
  <div class="col-6">
    <div class="my-3 row">
      {{> message}}
      <label for="staticEmail" class="col-sm-3 col-form-label">*必填欄位</label>
      <div class="col-sm-9 d-flex justify-content-center">
        請輸入你的支出
      </div>
    </div>
    <form action="/records/new" method="POST">
      <div class="mb-3 row">
        <label for="inputItem" class="col-sm-3 col-form-label">名稱*:</label>
        <div class="col-sm-9">
          <input type="string" class="form-control" id="inputItem" name="name" value="{{name}}">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="inputDate" class="col-sm-3 col-form-label">日期*:</label>
        <div class="col-sm-9">
          <input type="string" class="form-control outline-dark" id="inputDate" placeholder="填入格式2020.04.23" name="date"
            value="{{date}}">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="selectCategory" class="col-sm-3 col-form-label">類別*:</label>
        <div class="col-sm-9">
          <select class="form-select" id="category" name="category">
            {{#if category}}
            <option value="{{ category }}" selected>{{ category }}</option>
            {{else}}
            <option disabled selected>選擇一個類別</option>
            {{/if}}
            <option value="家居物業">家居物業</option>
            <option value="交通出行">交通出行</option>
            <option value="休閒娛樂">休閒娛樂</option>
            <option value="餐飲食品">餐飲食品</option>
            <option value="其他">其他</option>
          </select>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="inputAmount" class="col-sm-3 col-form-label">金額*:</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" id="inputAmount" name="amount" value="{{amount}}"
            onkeyup="this.value=this.value.replace(/\D/g,'')">
        </div>
      </div>
      <div class="my-5 row">
        <div class="col-sm-3"></div>
        <div class="col-sm-9 d-flex m-0 p-0">
          <button type="submit" class="col-6 btn btn-outline-warning mx-1 addExpense">新增支出</button>
          <a href="/" class="col-6 btn btn-outline-secondary mx-1">返回</a>
        </div>
      </div>
    </form>
  </div>
</div>